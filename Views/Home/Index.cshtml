@using Microsoft.AspNetCore.Mvc.Localization;

@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["HomePage"];
}

<div class="content">
    <h2>@Localizer["NewAdditions"]</h2> 
    <div class="card">
        last 5 items
    </div>
    <h2>@Localizer["BiggestCollections"]</h2>
    <div class="card">
        biggest collections
    </div>
    <div class="container mt-5 col-6">
        <h2>@Localizer["Tags"]</h2>
        <ul class="cloud" role="navigation" aria-label="Tag Cloud">
        @{
            foreach(var tagName in (List<String>)ViewData["tags"])
            {
                    <li><a href="search/?tag=@tagName">@tagName</a></li>
            }
         }
        </ul>
    </div>
</div>
