@using Microsoft.AspNetCore.Identity
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a class="nav-link active" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage"><i class="bi bi-gear"></i></a>
    </li>
    <li class="nav-item">
        <form  id="logout" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <a class="nav-link active" href="#" onclick="document.getElementById('logout').submit()"><i class="bi bi-door-closed"></i></a>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link active" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link active" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>
