@using Microsoft.AspNetCore.Mvc.Localization;

@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = "Admin Panel";
}
@model CollectionsPortal.ViewModels.UserViewModel

<div class="text-center">
    <h2>@Localizer["ManageUsers"]</h2>
    <input id="searchUser" class="form-control" placeholder="@Localizer["SearchUser"]" name="searchUser" />
    <div>
         @foreach (var user in Model.Paginated())  
        {  
        <div id="userBlock" class="alert alert-secondary rounded-0">  
            <p><b>@Localizer["Email"]: </b>@user.Email <button class="btn btn-primary">@Localizer["Block"]</button><button class="btn btn-success">@Localizer["MakeAdmin"]</button><button class="btn btn-danger">@Localizer["Delete"]</button></p>
        </div>  
        }  
  
    <ul class="pagination">  
        @for (int i = 1; i <= Model.PageCount(); i++)  
            {  
            <li class="@(i == Model.CurrentPage ? "page-item active" : "page-item")">  
                <a class="page-link" href="@Url.Action("Users", new { page = i })">@i</a>  
            </li>  
            }  
    </ul>  
    </div>
</div>
