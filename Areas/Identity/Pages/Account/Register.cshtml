@page
@model RegisterModel


<div class="col-lg-6 mb-5 mb-lg-0">
    <h1 class="my-5 display-5 fw-bold ls-tight">Best place<br>
        <span class="text-primary">to share your awesome collection!</span>
        <span class="my-5 display-5 fw-bold ls-tight">join us:</span>
    </h1>
</div>
<div class="container py-5 h-100">  
    <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-outline mb-4">
                <input asp-for="Input.Email" class="form-control form-control-lg" placeholder="Email" autocomplete="username" aria-required="true" />
                <span asp-validation-for="Input.Email" class="font-weight-bold-danger"></span>
            </div>
            <div class="form-outline mb-4">
                <input asp-for="Input.Password" class="form-control form-control-lg" placeholder="Password" autocomplete="new-password" aria-required="true" />
                <span asp-validation-for="Input.Password" class="font-weight-bold-danger"></span>
            </div>
            <div class="form-outline mb-4">
                <input asp-for="Input.ConfirmPassword" class="form-control form-control-lg" placeholder="Repeat password" autocomplete="new-password" aria-required="true" />
                <span asp-validation-for="Input.ConfirmPassword" class="font-weight-bold-danger"></span>
            </div>
            <button id="registerSubmit" type="submit" class="btn btn-secondary btn-lg btn-block">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
