@{
    ViewData["Title"] = "Profile";
}
<h1 class="display-4">Hello, @ViewBag.User</h1>
<div class="text-center">
    <a href="/profile/create/">
        <button class="btn btn-success">Create new collection</button>
        </a>
    
    <h2>Your collections: </h2>
    @{
        foreach(var item in ViewBag.Collections)
        {
            <div><a href="/collections/?collectionId=@item.Id">@item.Name</a><button class="btn btn-primary" id="buttonEdit"><i class="bi bi-x-square-fill"></i></button></div>
        }
    }
</div>
